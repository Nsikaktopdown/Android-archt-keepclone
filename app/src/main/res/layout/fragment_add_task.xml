<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context="ng.com.nsikakthompson.android_archt_keepclone.ui.add.AddTaskActivityFragment"
    tools:showIn="@layout/activity_add_task">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/add_title_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_title"
            android:background="#fff"
            android:textStyle="bold"
            android:padding="13dp"

            />
        <EditText
            android:id="@+id/add_description_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="@string/add_descrip"
            android:background="#fff"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"

            />
    </LinearLayout>
</RelativeLayout>
